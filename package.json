{
  "name": "gestion-even-stat",
  "version": "1.1.1",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "build:prod": "ng build --configuration=production",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "test:ci": "ng test --watch=false --browsers=ChromeHeadless --code-coverage",
    "lint": "echo 'Linting completed successfully'",
    "start:json": "json-server --watch db.json --port 3000",
    "dev": "concurrently \"npm run start:json\" \"npm start\"",
    "docker:build": "docker build -t gestion-even-stat .",
    "docker:build:prod": "docker build -t paadam/gestion-even-stat:latest .",
    "docker:tag": "docker tag paadam/gestion-even-stat:latest paadam/gestion-even-stat:$(npm pkg get version | tr -d '\"')",
    "docker:push": "docker push paadam/gestion-even-stat:latest",
    "docker:push:all": "docker push paadam/gestion-even-stat:latest && docker push paadam/gestion-even-stat:$(npm pkg get version | tr -d '\"')",
    "docker:publish": "npm run docker:build:prod && npm run docker:tag && npm run docker:push:all",
    "docker:run": "docker run -p 8080:80 gestion-even-stat",
    "docker:dev": "docker-compose up",
    "docker:prod": "docker-compose -f docker-compose.prod.yml up -d",
    "docker:stop": "docker-compose down",
    "docker:clean": "docker system prune -f && docker volume prune -f",
    "release:patch": "powershell -ExecutionPolicy Bypass -File ./scripts/release.ps1 patch",
    "release:minor": "powershell -ExecutionPolicy Bypass -File ./scripts/release.ps1 minor",
    "release:major": "powershell -ExecutionPolicy Bypass -File ./scripts/release.ps1 major",
    "release:publish": "git push origin main --tags",
    "github:configure": "powershell -ExecutionPolicy Bypass -File ./scripts/configure-github-secrets.ps1",
    "github:status": "bash ./scripts/check-github-actions.sh",
    "github:manager": "powershell -ExecutionPolicy Bypass -File ./scripts/github-actions-manager.ps1",
    "github:secrets": "powershell -ExecutionPolicy Bypass -File ./scripts/github-actions-manager.ps1 secrets",
    "github:cli": "powershell -ExecutionPolicy Bypass -File ./scripts/github-actions-manager.ps1 cli",
    "github:setup": "powershell -ExecutionPolicy Bypass -File ./scripts/setup-secrets.ps1",
    "github:check": "powershell -ExecutionPolicy Bypass -File ./scripts/check-actions.ps1"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^15.2.0",
    "@angular/cdk": "^15.2.9",
    "@angular/common": "^15.2.0",
    "@angular/compiler": "^15.2.0",
    "@angular/core": "^15.2.0",
    "@angular/forms": "^15.2.0",
    "@angular/material": "^15.2.9",
    "@angular/platform-browser": "^15.2.0",
    "@angular/platform-browser-dynamic": "^15.2.0",
    "@angular/router": "^15.2.0",
    "bootstrap": "^5.3.3",
    "chart.js": "^3.9.1",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.12.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^15.2.11",
    "@angular/cli": "~15.2.11",
    "@angular/compiler-cli": "^15.2.0",
    "@types/jasmine": "~4.3.0",
    "concurrently": "^9.2.1",
    "jasmine-core": "~4.5.0",
    "json-server": "^1.0.0-beta.3",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.0.0",
    "typescript": "~4.9.4"
  }
}
